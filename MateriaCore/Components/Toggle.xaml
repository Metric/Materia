<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" HorizontalAlignment="Stretch"
             x:Class="MateriaCore.Components.Toggle">
  <Grid Height="42">
    <Button x:Name="Toggle" BorderThickness="0" Content="{Binding InnerContent}" Margin="5" FontSize="10" HorizontalAlignment="Stretch" Height="32"></Button>
  </Grid>
</UserControl>
