<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MateriaCore.Components.GradientHandle">
  <Grid Width="16" Height="32">
    <Border BorderBrush="White" HorizontalAlignment="Left" VerticalAlignment="Top" Name="Max" Width="16" Height="16" BorderThickness="0">
      <Path HorizontalAlignment="Center" VerticalAlignment="Center" Data="M 0 0 L 0 12 L 12 0">
        <Path.RenderTransform>
          <TransformGroup>
            <RotateTransform Angle="45" />
            <TranslateTransform X="0" Y="0" />
          </TransformGroup>
        </Path.RenderTransform>
        <Path.Fill>
          <SolidColorBrush Color="#DDFFFFFF" />
        </Path.Fill>
      </Path>
    </Border>
    <Button Name="SelectedColor" BorderBrush="{StaticResource Overlay24}" Margin="0,10,0,0" Background="{StaticResource Overlay11}" />
  </Grid>
</UserControl>
