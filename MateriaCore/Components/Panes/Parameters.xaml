<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:m="clr-namespace:MateriaCore.Components"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MateriaCore.Components.Panes.Parameters"
        Title="Parameters" Topmost="True" CanResize="True" SystemDecorations="None" Width="256" Height="450" MinWidth="256" MinHeight="450" ShowInTaskbar="False">
  <Grid Background="{StaticResource Surface}">
    <ScrollViewer Name="ScrollView" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Margin="2,2,2,2">
      <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
        <Grid Background="{StaticResource Overlay5}" Height="32" HorizontalAlignment="Stretch">
          <TextBlock Name="Title" Foreground="White" Text="Properties" FontSize="16" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" />
        </Grid>
        <m:ParameterMap x:Name="Params" />
      </StackPanel>
    </ScrollViewer>
  </Grid>
</Window>
