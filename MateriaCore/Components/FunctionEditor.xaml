<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:p="clr-namespace:MateriaCore.Localization"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MateriaCore.Components.FunctionEditor">
  <StackPanel Orientation="Vertical">
    <StackPanel Name="Stack">

    </StackPanel>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,5,0">
      <Button Name="AddFunc" Background="Transparent" Margin="5" BorderThickness="0" ToolTip.Tip="{p:Local AddFunction}">
        <StackPanel Height="32" Orientation="Horizontal" VerticalAlignment="Center">
          <Image Source="resm:MateriaCore.Images.add.png" Margin="4" />
        </StackPanel>
      </Button>
    </StackPanel>
  </StackPanel>
</UserControl>
