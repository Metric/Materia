<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:p="clr-namespace:MateriaCore.Localization"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MateriaCore.Components.FileSelector">
  <Grid Height="42">
    <TextBlock Name="PathLabel"  Margin="5,5,144,5" Foreground="{StaticResource TextLightMedium}" />
    <Button Name="SelectFile" Content="{p:Local Select}" Margin="0,5,75,5" Width="64" HorizontalAlignment="Right" />
    <Button x:Name="ClearFile" Background="{StaticResource Overlay5}" BorderThickness="0" Content="{p:Local Clear}" Margin="0,5,6,5" Width="64" HorizontalAlignment="Right"/>
  </Grid>
</UserControl>
