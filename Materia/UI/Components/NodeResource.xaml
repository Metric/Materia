<UserControl x:Class="Materia.NodeResource"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Materia"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="16" Background="Transparent" MouseMove="Grid_MouseMove">
        <Image Source="pack://application:,,,/Materia;component/Images/node-icon.png" Width="14" Height="14" HorizontalAlignment="Left" VerticalAlignment="center" Margin="5,0,0,0"/>
        <TextBlock Name="NodeName" VerticalAlignment="center" FontSize="10" TextAlignment="Left" Text="Normal" HorizontalAlignment="Stretch" Foreground="LightGray" Margin="28,0,0,0" />
    </Grid>
</UserControl>
