<UserControl x:Class="Materia.DropDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Materia"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="256">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="56" />
            <ColumnDefinition MaxWidth="175" />
        </Grid.ColumnDefinitions>
        <ComboBox Foreground="LightGray" Style="{StaticResource ComboBoxFlatStyle}" SelectionChanged="Dropdown_SelectionChanged" Name="Dropdown" Grid.Column="1" MaxWidth="175"  Margin="4,4,4,4"></ComboBox>
    </Grid>
</UserControl>
